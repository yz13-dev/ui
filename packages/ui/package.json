{
  "name": "@yz13/ui",
  "version": "0.1.0",
  "description": "A modern React UI component library with Tailwind CSS",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    "./styles.css": "./dist/index.css",
    "./card": {
      "types": "./dist/card.d.ts",
      "import": "./dist/card.js",
      "require": "./dist/card.js"
    },
    "./gradient": {
      "types": "./dist/gradient.d.ts",
      "import": "./dist/gradient.js",
      "require": "./dist/gradient.js"
    },
    "./turborepo-logo": {
      "types": "./dist/turborepo-logo.d.ts",
      "import": "./dist/turborepo-logo.js",
      "require": "./dist/turborepo-logo.js"
    }
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "tailwindcss",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yz13-dev/ui.git"
  },
  "homepage": "https://github.com/yz13-dev/ui#readme",
  "bugs": {
    "url": "https://github.com/yz13-dev/ui/issues"
  },
  "scripts": {
    "build": "tsup",
    "check-types": "tsc --noEmit",
    "dev": "tsup --watch",
    "lint": "eslint src --max-warnings 0",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^19.1.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "@tailwindcss/cli": "^4.1.11",
    "@types/react": "^19.1.8",
    "eslint": "^9.30.1",
    "tailwindcss": "^4.1.11",
    "tsup": "^8.5.0",
    "typescript": "5.8.2"
  }
}
